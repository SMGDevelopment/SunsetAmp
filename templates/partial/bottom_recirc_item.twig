{% extends "partial/components/bottom_recirc_item/base.twig" %}
{% set crop_url = related_post.thumbnail( 'square' )  %}
{% if crop_url starts with '//' %}
  {% set crop_url = 'https:' ~ crop_url %}
{% endif %}
{% set crop_url = crop_url | resize(150,150) %}

{% block recirc_item_image %}
	<amp-img height="150" width="150" alt="{{related_post.thumbnail.alt|default('')}}" src="{{crop_url}}"</amp-img>
{% endblock recirc_item_image %}
